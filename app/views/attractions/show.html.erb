<h1><%= @attraction.name %></h1>

<p><strong>Tickets Required: </strong><%= @attraction.tickets %></p>
<p><strong>Height Required: </strong><%= @attraction.min_height %></p>
<p><strong>Nausea Rating: </strong><%= @attraction.nausea_rating %></p>
<p><strong>Happiness Rating: </strong><%= @attraction.happiness_rating %></p><br>

<%= form_tag rides_path do %>
  <%= hidden_field_tag :user_id, @user.id %>
  <%= hidden_field_tag :attraction_id, @attraction.id %>
  <%= submit_tag "Go on this ride" %>
<% end %>

<% if current_user.admin %>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% end %>